{
  "name": "jQuery-simple-validator",
  "version": "1.0.0",
  "description": "It is a lightweight jQuery form validator which enhances on html5 validations",
  "main": "index.js",
  "scripts": {
    "start": "gulp",
    "docs": "jsdoc -c jsdoc.conf.json --readme README.md --destination dist/api",
    "test:size": "bundlesize",
    "test": "jest ./test/test.js || true",
    "test:coverage": "jest --coverage --watchAll=false",
    "lint": "eslint ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "bundlesize": [
    {
      "path": "./dist/jquery-simple-validator.min.js",
      "maxSize": "7 kB"
    }
  ],
  "keywords": [
    "gulp",
    "jQuery",
    "validator",
    "html5"
  ],
  "author": "ameerthehacker",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.6.2",
    "@babel/preset-env": "7.6.2",
    "babel-eslint": "10.0.3",
    "babelify": "^10.0.0",
    "browserify": "^16.5.0",
    "bundlesize": "^0.18.0",
    "colors": "^1.4.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-concat": "^2.6.1",
    "gulp-htmlmin": "^5.0.1",
    "gulp-imagemin": "^6.1.1",
    "gulp-minify-css": "^1.2.4",
    "gulp-rename": "^1.4.0",
    "gulp-sass": "^4.0.2",
    "gulp-uglify": "^3.0.2",
    "gulp-webserver": "^0.9.1",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "jquery": "^3.4.1",
    "jsdoc": "^3.6.3",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0"
  },
  "peerDependencies": {
    "jQuery": "^3.3.1"
  },
  "jest": {
    "testURL": "http://localhost/"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ameerthehacker/jquery-simple-validator.git"
  },
  "bugs": {
    "url": "https://github.com/ameerthehacker/jquery-simple-validator/issues"
  },
  "homepage": "https://github.com/ameerthehacker/jquery-simple-validator#readme"
}
